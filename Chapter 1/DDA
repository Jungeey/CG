#include<stdio.h>
#include<math.h>
#include<conio.h>
#include<graphics.h>

int main(){
	int x0,y0,x1,y1;
	float m,abs,xin,yin;
	int x,y,i;
	int gdriver= DETECT, gmode;
	initgraph(&gdriver,&gmode, "C:\\TURBOC3\\BGI");
	printf("X0= ");
	scanf("%d",&x0);
	printf("Y0= ");
	scanf("%d",&y0);
	printf("X1= ");
	scanf("%d",&x1);
	printf("Y1= ");
	scanf("%d",&y1);

	m=(y1-y0)/(x1-x0);

	if(m<1){
		abs=x1-x0;
	} else{
		abs=y1-y0;
	}
	if(abs<0){
		abs=abs*(-1);
	}

	xin=(x1-x0)/abs;
	yin=(y1-y0)/abs;

        x=x0;
	y=y0;
	for(i=0;i<abs;i++){
		putpixel(x,y,5);
		x=x+i;
		y=y+i;
	}



	getch();
	closegraph();
return 0;
}
